<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyName>CodeCool.SeasonalProductDiscounter</AssemblyName>
        <RootNamespace>CodeCool.SeasonalProductDiscounter</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Data.Sqlite" Version="7.0.0" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="Resources\SeasonalProductDiscounter.db" />
      <Content Include="Resources\SeasonalProductDiscounter.db">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
    </ItemGroup>

</Project>
